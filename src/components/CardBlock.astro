---
import {Slugify} from  '../lib/helpers'

// Access passed-in component props, like `<X title="Hello, World" />`
const {title, content } = Astro.props
const slug = Slugify(title)
---

<div class="flex flex-col border rounded-lg p-4 md:p-6">
  <h3 class="text-lg md:text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-500 mb-4">{content}</p>
  <a href={`/starships/${slug}`} class="text-indigo-500 hover:text-indigo-600 active:text-indigo-700 font-bold transition duration-100 mt-auto">View</a>
</div>